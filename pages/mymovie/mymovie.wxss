/* pages/mymovie/mymovie.wxss */
/* 我的电影 */
.myc{
  color: #dd5e9e;
  padding: 12rpx;
  text-align: center;
  font-weight: 700;
}
.mymovie{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column-reverse;
  justify-content: space-around;
  align-items: center;
}
.mymovie>view{
  height: 300rpx;
}
.movie{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.mypic{
  width: 180rpx;
  height: 250rpx;
}
.detail{
  width: 250rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: flex-start;
  font-size: 20rpx;
}
.detail>view{
  margin-bottom: 5rpx;
  margin-left: 15rpx;
}
.myt{
  color: #dd5e9e;
  font-size: 22rpx;
  font-weight: 700;
}
.myr{
  color: orange;
  font-size: 20rpx;
}
.comment{
  width: 45%;
  height: 260rpx;
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.comment .ct{
  width: 280rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border: 1rpx solid #dd5e9e;
  border-radius: 10rpx;
  padding: 5rpx;
  line-height: 60rpx;
}
.comment .cv{
  margin-top: 10rpx;
  width: 300rpx;
  display: flex;
  overflow: hidden;
}
.comment .cv .cpic{
  width: 120rpx;
  height: 120rpx;
  margin: 5rpx;
}