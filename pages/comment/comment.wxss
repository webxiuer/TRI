/* pages/comment/comment.wxss */
/* 1 电影背景图片: 虚化 */
.detail-container{
  height: 400rpx;
  filter: blur(40rpx); /*模糊滤镜*/
  opacity: 0.9;
}
/* 2 电影背景的遮罩层 */
.detail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background: #333;
  top: 0;
  left: 0;
  z-index: -1; /*显示在底层*/
}
/* 3 电影的详细信息 */
.detail-info{
  position: absolute;
  display: flex; /*弹性布局*/
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx; /*高度和遮罩层一致*/
  padding: 20rpx;
}
/* 3.1 电影清晰图片 */
.detail-img{
  width: 280rpx;
  height: 90%;
  margin-right: 24rpx;
}
/* 3.2 标题... */
.detail{
  flex-grow: 1; /*占满剩余空间*/
  line-height: 60rpx;
  color: #fff;
  font-size: 24rpx;
  /* font-family: SimHei; */
}
.detail-title{
  font-size: 32rpx;
  font-weight: 700;
}
/* 3.3 评分 */
.detail-sc{
  color: #fc0;
  font-size: 36rpx;
}
/* 4.描述 */
.desc{
  padding: 20rpx;
  font-size: 24rpx;
  color: #555;
}
/* 打分 */
.movie-rate{
  float: right;
  margin-right: 20rpx;
}
/* 预览图片的样式 */
.movie-images{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: flex-start;
  align-items: center;
  min-height: 200rpx;
}
.movie-images>image{
  width: 33%;
  height: 200rpx;
  margin: 1rpx;
}
